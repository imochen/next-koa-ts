{
  "name": "next-koa-ts",
  "version": "1.0.0",
  "description": "Next.js + Koa + Typescript",
  "scripts": {
    "build": "next build && tsc --project tsconfig.server.json",
    "start:local": "node .next/server",
    "start:dev": "pm2-dev start pm2.dev.config.js",
    "temp": "pm2 start .next/server --watch --no-daemon",
    "start:prod": "pm2-runtime start pm2.prod.config.js"
  },
  "author": "Jiyoon Ha <punkkid001@gmail.com> (https://github.com/punkyoon)",
  "license": "Unlicense",
  "devDependencies": {
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.40",
    "@types/next": "^8.0.4",
    "@types/styled-components": "^4.1.14",
    "@zeit/next-typescript": "^1.1.1",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "next": "^8.1.0",
    "pm2": "^3.5.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.0"
  }
}
